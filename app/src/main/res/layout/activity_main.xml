<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gebruiker.vibrate6.MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="4"
        android:id="@+id/editBpm"
        android:layout_marginTop="39dp"
        android:text="@string/editBpm"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_lblBpm"
        android:id="@+id/txt_lbl_Bpm"
        android:editable="false"
        android:textSize="20dp"
        android:textAlignment="viewStart"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_alignBottom="@+id/editBpm"
        android:layout_toRightOf="@+id/editBpm"
        android:layout_toEndOf="@+id/editBpm"
        android:layout_marginBottom="3dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnStart"
        android:id="@+id/button"
        android:textAllCaps="false"
        android:onClick="startMetronome"
        android:layout_alignBottom="@+id/editBpm"
        android:layout_toRightOf="@+id/txt_lbl_Bpm"
        android:layout_toEndOf="@+id/txt_lbl_Bpm"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp" />
</RelativeLayout>
